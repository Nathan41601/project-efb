@model EnhancerForBusiness_Web.Models.Order

@{
    ViewBag.Title = "Dirección y Pago";
}

@section Scripts {
    @Scripts.Render("~/bundles/jquery.validate")
}

<section>
    <h2>Dirección y Pago</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
<div class="row">
    <div class="col-md-6 no-gutter-xs">
        <div class="col-xs-12 no-gutter-sm">
            <h4>Información del Pedido</h4>
        </div>
        <div class="form-group col-sm-8 col-md-10 no-gutter-sm">
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Nombre" })
            @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-8 col-md-10 no-gutter-sm">
            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Teléfono" })
            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-8 col-md-10 no-gutter-sm">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo Electrónico" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-8 col-md-10 no-gutter-sm">
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Dirección" })
            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-8 col-md-10 no-gutter-sm">
            @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "Cantón" })
            @Html.ValidationMessageFor(m => m.City, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-8 col-md-10 no-gutter-sm">
            @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "Provincia" })
            @Html.ValidationMessageFor(m => m.State, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-8 col-md-10 no-gutter-sm">
            @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", placeholder = "Código Postal" })
            @Html.ValidationMessageFor(m => m.PostalCode, "", new { @class = "text-danger" })
        </div>
        <div class="form-group col-sm-8 col-md-10 no-gutter-sm">
            @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Distrito" })
            @Html.ValidationMessageFor(m => m.Country, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-6 no-gutter-sm">
            <input type="submit" value="Enviar Pedido" />
        </div>
    </div>
    <div class="col-md-6 no-gutter-xs">
    </div>
</div>
    }
</section>