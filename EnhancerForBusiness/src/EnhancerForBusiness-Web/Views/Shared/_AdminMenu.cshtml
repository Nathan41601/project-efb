@using EnhancerForBusiness_Web.Areas.Admin

@{
    var claims = User.Identity as System.Security.Claims.ClaimsIdentity;
    var isAdmin = claims.HasClaim(AdminConstants.ManageStore.Name, AdminConstants.ManageStore.Allowed);
}

@if (isAdmin)
{
    <li class="dropdown">
        <a href="@Url.Action("Index", "Store")" id="admin-link" class="dropdown-toggle head-link" data-toggle="dropdown">Admin&nbsp;<br class="hidden-xs" /><b class="caret"></b></a>
        <ul class="dropdown-menu">
            <li> @Html.ActionLink("Gestionar Artículos", "Index", "StoreManager", new { area = AdminConstants.Area }, null) </li>
            <li> @Html.ActionLink("Ver Pedidos", "Index", "Orders", new { area = AdminConstants.Area }, null) </li>
            <li> @Html.ActionLink("Encontrar Proveedores", "Find", "Customer", new { area = AdminConstants.Area }, null) </li>
            <li> @Html.ActionLink("Ver Rainchecks", "Index", "Raincheck", new { area = AdminConstants.Area }, null) </li>
        </ul>
    </li>
}