@using EnhancerForBusiness_Web.Utils
@model EnhancerForBusiness_Web.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Restablecer Contraseña";
}
<section>
    <h2>@ViewBag.Title</h2>
    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
            <h4>Restablecer la contraseña</h4>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Code)
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        <div class="input-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Correo Electronico" })
                            <span class="input-group-addon">@Html.Image("login_profile_icon.png")</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Contraseña" })
                            <span class="input-group-addon">@Html.Image("login_safe_icon.png")</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar Contraseña" })
                            <span class="input-group-addon">@Html.Image("login_safe_icon.png")</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <input type="submit" class="btn btn-default" value="Restablecer" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6"></div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jquery.validate")
}