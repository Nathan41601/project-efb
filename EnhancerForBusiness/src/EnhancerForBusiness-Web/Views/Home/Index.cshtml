@section prebody {
    <div class="hero-display">
        <div id="jumbotron-carousel" class="carousel" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#jumbotron-carousel" data-slide-to="0" class="active"></li>
                <li data-target="#jumbotron-carousel" data-slide-to="1"></li>
                <li data-target="#jumbotron-carousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active" style="background-image: url('/Images/hero_image1.jpg')">
                    <a href="@Url.Action("Browse", "Store", new { categoryId = 5 })" class="carousel-wrapper-link"></a>
                    <p>Todos los aceites y filtros</p>
                    <p>50%</p>
                    <p>Descuentos de Navidad</p>
                    <div class="carousel-caption hidden-xs hidden-sm">
                        <a href="@Url.Action("Browse", "Store", new { categoryId = 5 })" class="carousel-link">Comprar ahora</a>
                    </div>
                </div>
                <div class="item" style="background-image: url('/Images/hero_image2.jpg')">
                    <a href="@Url.Action("Browse", "Store", new { categoryId = 3 })" class="carousel-wrapper-link"></a>
                    <div class="container">
                        <p>Neumaticos</p>
                        <ul>
                            <li>Mejora en la eficiencia del combustible</li>
                            <li>Mantenga una circulacion segura</li>
                            <li>Mayor durabilidad</li>
                        </ul>
                    </div>
                    <div class="carousel-caption hidden-xs hidden-sm">
                        <a href="@Url.Action("Browse", "Store", new { categoryId = 3 })" class="carousel-link">Comprar ahora</a>
                    </div>
                </div>
                <div class="item" style="background-image: url('/Images/hero_image3.jpg')">
                    <a href="@Url.Action("Index", "Store")" class="carousel-wrapper-link"></a>
                    <p>Visitenos</p>
                    <p>Encuentre las piezas para usted</p>
                    <div class="carousel-caption hidden-xs hidden-sm">
                        <a href="@Url.Action("Browse", "Store", new { categoryId = 3 })" class="carousel-link">Comprar ahora</a>
                    </div>
                </div>
            </div>

            <!-- Controls -->
            <a class="left carousel-control" href="#jumbotron-carousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Anterior</span>
            </a>
            <a class="right carousel-control" href="#jumbotron-carousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Siguiente</span>
            </a>
        </div>
    </div>
