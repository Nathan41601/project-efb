@using EnhancerForBusiness_Web.Utils
@model EnhancerForBusiness_Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Cambiar Contraseña";
}
<section>
    <h2>@ViewBag.Title</h2>

    <div class="row">
        <div class="col-md-6">
            @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
            <h4>Cambiar contraseña</h4>
                @Html.ValidationSummary("", new { @class = "text-danger" })
                <div class="form-group">
                    <div class="col-md-8 col-md-10">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", placeholder = "Contraseña anterior" })
                            <span class="input-group-addon">@Html.Image("login_safe_icon.png")</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8 col-md-10">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", placeholder = "Nueva contraseña" })
                            <span class="input-group-addon">@Html.Image("login_safe_icon.png")</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-8 col-md-10">
                        <div class="input-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirmar nueva contraseña" })
                            <span class="input-group-addon">@Html.Image("login_safe_icon.png")</span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-8 col-md-10">
                        <input type="submit" value="Cambiar contraseña" class="btn btn-default" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-6"></div>
    </div>
</section>
@section Scripts {
    @Scripts.Render("~/bundles/jquery.validate")
}